
{.section item}

  <!--WRAPPER-->
  
  <article id="post-{id}" class="{@|item-classes}">
    
    <!--POST TILE-->

    <h1 class="title">
      {.passthrough?}
        <a href="{sourceUrl}" target="_blank">{title}</a>
      {.or}
        <a href="{fullUrl}">{title}</a>
      {.end}
    </h1>
    <p class="meta">
      <a href="{fullUrl}"><time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time></a> by <a href="?author={author.id}">{author.displayName}</a>.
      {.section sourceUrl}
        <a href="{@}" class="source" target="_blank">Source</a>.
      {.end}
    </p>

    <!--MAIN CONTENT-->

    {body}

    <!--BLOG INJECTION-->

    {postItemInjectCode}    

<div class="row">
    <div class="twelve columns">
    <ul class="blog-actions clearfix">
    	<li class="social"><!--<script src="//platform.linkedin.com/in.js" type="text/javascript"></script>
    	<script type="IN/Share" data-url="https://bernalandco.squarespace.com{fullUrl}"></script>-->
    	{@|social-button}
    	</li>
    	<li class="like">{@|like-button}</li>
    </ul>
    </div>
</div>
    
     

    <!--LOCATION-->

    {.section location}
      {.section addressTitle}
        {addressTitle}
        {addressLine1}
        {addressLine2}
        {addressCountry}
      {.end}
    {.end}

    <!--COMMENTS-->

    {@|comments}

  </article>

{.end}
    

<!--PAGINATION-->
  
{.section pagination}
   <nav class="pagination">

    <!--NEWER PAGE-->

    {.section prevItem}
      <a href="{fullUrl}">Newer</a>
    {.or}
      <a class="disabled">Newer</a>
    {.end}
    
    <!--OLDER PAGE-->

    {.section nextItem}
      <a href="{fullUrl}">Older</a>
    {.or}
      <a class="disabled">Older</a>
    {.end}

  </nav>
{.end}
